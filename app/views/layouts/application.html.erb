<!DOCTYPE html>
<html>
<head>
  <title>AndyCrmApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Andy's CRM</a>
      </div>

      <% if current_user %>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> Leads <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li>foo</li>
            <li class="divider"></li>
            <li>bar</li>
          </ul>
        </li>
        <li></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to current_user.full_name, user_path(current_user) %></li>
          <li><%= link_to "Sign Out", sign_out_path %></li>
      </ul>
      <% else %>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign In", sign_in_path %></li>
          <li><%= link_to "Sign Up", sign_up_path %></li>
      </ul>
      <% end %>

    </div>
  </nav>

  <div class="container">

  <% if flash[:error] %>
    <% flash.each do | value | %>
      <div class="alert alert-danger", role="alert">
        <%= flash[:error] %>
      </div>
    <% end %>
    <% end %>

    <% if flash[:notice] %>
    <% flash.each do | value | %>
      <div class="alert alert-success", role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% end %>

  <%= yield %>

  <div class="page-header">
  </div>

  <footer>
    <div class="row">
      <div class="text-center">
        <%= link_to "Home", "/" %>
          |
        <%= link_to "About" %>
          |
        <%= link_to "Terms" %>
          |
        <%= link_to "FAQ" %>
      </div>
    </div>
  </div>

</body>
</html>
