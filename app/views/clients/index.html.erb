<h1>Listing Leads</h1>

<% @clients.where(is_interested: true).each do |client| %>
<table class="table">

  <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone Number</th>
    <th>Address</th>
    <th>Edit</th>
  </thead>

  <tbody>
    <tr>
      <td><%= client.first_name %></td>
      <td><%= client.last_name %></td>
      <td><%= client.email %></td>
      <td><%= client.phone_number %></td>
      <td><%= client.address %></td>
      <td><%= link_to "Edit Client", edit_user_client_path(@user.id, client) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

